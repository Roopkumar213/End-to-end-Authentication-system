!.env.example

# Mode
NODE_ENV=development           # development / production
PORT=4000                      # backend server port

# URLs
FRONTEND_URL=http://localhost:3000   # frontend URL
BACKEND_URL=http://localhost:4000    # backend URL

# Database
MONGO_URI=                        # your MongoDB connection string

# JWT
JWT_ACCESS_SECRET=                # random string (access token secret)
JWT_REFRESH_SECRET=               # random string (refresh token secret)
JWT_ACCESS_EXPIRES_SECONDS=900    # 15 minutes
JWT_REFRESH_EXPIRES_SECONDS=2592000 # 30 days
ACCESS_TOKEN_EXPIRES=15m          # access token expiry
REFRESH_TOKEN_EXPIRES=30d         # refresh token expiry
BCRYPT_SALT_ROUNDS=12             # strength for hashing passwords

# Cookies
COOKIE_DOMAIN=localhost           # cookie domain
COOKIE_SAME_SITE=Lax              # Lax / Strict / None
COOKIE_SECURE=false               # true only in production with https

# OTP
SHOW_OTP=true                     # whether OTP is enabled
OTP_EXPIRE_MINUTES=5              # OTP expiration time

# Trust Proxy
TRUST_PROXY=false                 # true only when behind reverse proxy

# Email for OTP password reset
EMAIL_HOST=smtp.gmail.com         # SMTP host
EMAIL_PORT=465                    # SMTP port
EMAIL_USER=your-email@example.com # email address that sends OTP
EMAIL_PASS=your-app-password      # app password from Gmail security
EMAIL_FROM=YourName@mail.com      # from name shown in emails

# Google OAuth
GOOGLE_CLIENT_ID=                 # Google OAuth Client ID
GOOGLE_CLIENT_SECRET=             # Google OAuth Client Secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/oauth/google/callback  # callback URL
